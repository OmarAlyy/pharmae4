<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="12dp"
    app:cardElevation="6dp"
    android:layout_marginEnd="10dp"
    android:layout_marginStart="10dp"
    android:layout_height="wrap_content">



    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center"
        android:padding="12dp"
        android:layout_margin="10dp"
        android:layout_height="match_parent">




        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image"
            android:layout_gravity="top"
            android:src="@drawable/vector_drawable_circle"
            android:layout_width="40dp"

            android:layout_height="40dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_weight="1"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="15sp"
                    android:textColor="#4f4f4f"
                    android:lineSpacingExtra="5sp"
                    android:text="Doctor Ahmed Karim"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content" />


                <TextView
                    android:id="@+id/status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:textSize="10sp"
                    android:textColor="#ffbe43"
                    android:lineSpacingExtra="4sp"
                    android:gravity="end"
                    android:text="Awaiting Response"
                    />


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp"
                android:layout_gravity="start"
                android:gravity="center"
                android:layout_height="wrap_content">


                <ImageView
                    android:layout_width="12dp"
                    android:src="@drawable/ic_clock"
                    android:layout_height="12dp" />



                <TextView
                    android:id="@+id/time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
android:layout_marginStart="10dp"
                    android:textStyle="normal"
                    android:textSize="11sp"
                    android:textColor="#6b6b6b"
                    android:lineSpacingExtra="4sp"
                    android:text="09:30 PM - 10:00 PM"
                    />



            </LinearLayout>



            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="12dp"
                android:layout_gravity="end"
                android:gravity="center"
android:layout_marginBottom="5dp"
                android:layout_height="wrap_content">


                <com.google.android.material.button.MaterialButton
                    android:id="@+id/StartVideo"
                    android:backgroundTint="#1277d1"
                    android:layout_width="wrap_content"
                    app:cornerRadius="5dp"
                    android:layout_marginEnd="10dp"
                    android:text="@string/start_video"
                    android:textSize="10sp"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    style="@style/Widget.AppCompat.Button.Colored"
                    android:textColor="@color/colorWhite"
                    android:layout_height="35dp" />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/cancel"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:theme="@style/Theme.MaterialComponents"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    app:cornerRadius="5dp"
                    android:textSize="10sp"

                    android:text="@string/cancel"
                    android:background="@android:color/transparent"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp" />




            </LinearLayout>




            </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="10dp"
        android:background="@color/foshia"
        android:layout_height="match_parent" />



</com.google.android.material.card.MaterialCardView>