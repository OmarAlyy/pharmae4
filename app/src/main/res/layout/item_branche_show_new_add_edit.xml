<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="10dp"
    android:layout_marginTop="6dp"
    android:id="@+id/card"
    android:orientation="vertical"
     app:cardElevation="6dp"
    android:padding="16dp"
     android:layout_height="wrap_content">






            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="start|center"
                    android:gravity="start|center"
                    android:layout_weight="1"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/iconType"
                        android:layout_width="12dp"
                        android:tint="@color/colorPrimary"
                        android:src="@drawable/ic_hospital"
                        android:layout_height="12dp" />

                    <TextView
                        android:id="@+id/area"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textStyle="normal"
                        android:textSize="10sp"
                        android:layout_marginStart="10dp"
                        android:textColor="#1277d1"
                        android:lineSpacingExtra="5sp"
                        android:text="El-Shouroq (Nasr City)"
                        />



                </LinearLayout>


                <ImageView
                    android:id="@+id/edit"
                    android:layout_width="26dp"
                    android:padding="1dp"
                    android:src="@drawable/ic_edit"
                    android:layout_height="26dp" />
                <ImageView
                    android:id="@+id/delete"
                    android:layout_width="26dp"
                    android:padding="1dp"
                    android:layout_marginStart="10dp"
                    android:src="@drawable/ic_delet"
                    android:layout_height="26dp" />

            </LinearLayout>



    <TextView
        android:id="@+id/city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textSize="12sp"
        android:layout_marginTop="8dp"
        android:textColor="#6b6b6b"
        android:lineSpacingExtra="4sp"
        android:text="Cairo ,Egypt"
        />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal">


        <ImageView
            android:layout_width="20dp"
            android:layout_gravity="top"
            android:src="@drawable/ic_location"
            android:layout_height="20dp" />

        <TextView
            android:id="@+id/text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:layout_marginStart="10dp"
            android:textSize="12sp"
            android:textColor="#6b6b6b"
            android:lineSpacingExtra="4sp"
            android:text="43 Nakhla moteey st , triumph square ,
infront of emam ali mosque New Cairo"
            />

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:background="@color/colorPrimary"
        android:layout_height="0.5dp" />



</LinearLayout>