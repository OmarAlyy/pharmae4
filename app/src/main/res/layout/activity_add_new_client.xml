<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="com.ekadsoft.pharmae4.Utilities.GlobalVariables" />

        <variable
            name="viewmodel"
            type="com.ekadsoft.pharmae4.AddClientViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:paddingEnd="16dp"
        android:background="@color/white">


    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <ImageView
            android:id="@+id/back"
            android:layout_width="26dp"
            android:tint="@color/colorPrimary"
            android:src="@drawable/ic_back"
            android:rotation="180"
            android:onClick="@{()->viewmodel.back()}"

            android:layout_gravity="start|center"
            android:layout_height="26dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="normal"
            android:textSize="18sp"
            android:layout_gravity="center"
            android:textColor="#1277d1"
            android:lineSpacingExtra="6sp"
            android:gravity="center_horizontal"
            android:text="Add New Client" />


    </FrameLayout>

    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="wrap_content">



        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="12dp"
            app:cardElevation="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent">




            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui_b"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#1277d1"
                android:lineSpacingExtra="5sp"
                android:text="@string/client"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui_b"
                    android:textStyle="bold"

                    android:textSize="12sp"
                    android:textColor="#1277d1"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/client_type"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui_b"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#1277d1"
                    android:lineSpacingExtra="4sp"
                    android:text="*"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lineClient_type"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:onClick="@{()->viewmodel.openClientType()}"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_gray_small_stroke"
                android:layout_height="30dp">


                <TextView
                    android:id="@+id/textClient_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui_b"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:text="@{viewmodel.clientTypeObservableField}"
                    android:textColor="#8d8b8b"
                    android:lineSpacingExtra="4sp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
             android:layout_weight="1"   />


                <ImageView
                    android:layout_width="20dp"
                    android:rotation="90"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_arrow_right_24dp"
                    android:layout_height="20dp" />
            </LinearLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:layout_height="wrap_content">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui_b"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#1277d1"
                    android:layout_weight="1"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/entity_client"
                    />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui_b"
                    android:textStyle="bold"
                    android:textSize="12sp"
                    android:textColor="#1277d1"
                    android:lineSpacingExtra="4sp"
                    android:text="*"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/linEntity_client"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:onClick="@{()->viewmodel.openEntityClient()}"
                android:layout_marginTop="8dp"
                android:background="@drawable/shape_rounded_gray_small_stroke"
                android:layout_height="30dp">


                <TextView
                    android:id="@+id/textEntity_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui_b"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#8d8b8b"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/entity_client"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
             android:layout_weight="1"   />


                <ImageView
                    android:layout_width="20dp"
                    android:rotation="90"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_arrow_right_24dp"
                    android:layout_height="20dp" />
            </LinearLayout>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui_b"
                android:textStyle="bold"
                android:textSize="12sp"
                android:textColor="#1277d1"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="16dp"
                android:lineSpacingExtra="4sp"
                android:text="@string/choose_client"
                />


            <LinearLayout
                android:id="@+id/linChoose_client"
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:paddingEnd="12dp"
                android:paddingStart="12dp"
                android:onClick="@{()->viewmodel.openChooseClient()}"

                android:paddingBottom="5dp"
                android:paddingTop="5dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="8dp"
                android:layout_height="30dp"
                android:background="@drawable/shape_rounded_gray_small_stroke">


                <TextView
                    android:id="@+id/textChoose_client"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/segoeui_b"
                    android:textStyle="bold"
                    android:textSize="10sp"
                    android:textColor="#8d8b8b"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/choose_client"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
             android:layout_weight="1"   />


                <ImageView
                    android:layout_width="20dp"
                    android:rotation="90"
                    android:tint="@color/colorPrimary"
                    android:src="@drawable/ic_arrow_right_24dp"
                    android:layout_height="20dp" />
            </LinearLayout>




            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="#FAF5F5"
                app:cardCornerRadius="10dp"
                android:layout_marginTop="12dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="10dp"
                android:layout_marginStart="10dp"
                android:layout_height="wrap_content">



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:padding="10dp"
                    android:visibility="gone"
                    android:layout_margin="10dp"
                    android:layout_height="match_parent">




                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/image"
                        android:layout_gravity="top"
                        android:src="@drawable/test"
                        app:civ_border_width="1dp"
                        app:civ_border_color="@color/grayBottom"
                        android:layout_width="40dp"

                        android:layout_height="40dp" />


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="12dp"
                        android:layout_height="wrap_content">



                        <TextView
                            android:id="@+id/name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="bold"
                            android:textSize="13sp"
                            android:fontFamily="@font/segoeui_b"
                            android:textColor="#1277d1"
                            android:lineSpacingExtra="5sp"
                            android:text="Doctor Ahmed"
                            />

                        <TextView
                            android:id="@+id/typeAndAge"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="12sp"
                            android:layout_marginTop="3dp"
                            android:textColor="#6b6b6b"
                            android:lineSpacingExtra="4sp"
android:text="Female , 30 Years"                            />




                        <TextView
                            android:id="@+id/email"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:layout_marginTop="3dp"
                            android:textSize="11sp"
                            android:textColor="#6b6b6b"
                            android:lineSpacingExtra="4sp"
                            android:text="Ahmed Karim@gmail.com"
                            />

                        <TextView
                            android:id="@+id/phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textStyle="normal"
                            android:textSize="11sp"
                            android:textColor="#6b6b6b"
                            android:lineSpacingExtra="4sp"
                            android:text="002-100 300 5689"
                            />


                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginTop="8dp"
                            android:layout_gravity="start"
                            android:paddingEnd="10dp"
                            android:gravity="center"
                            android:layout_height="wrap_content">



                            <de.hdodenhof.circleimageview.CircleImageView
                                android:id="@+id/logo"
                                android:layout_gravity="center"
                                android:src="@drawable/vector_drawable_circle"
                                android:layout_width="30dp"
                                android:layout_height="30dp" />



                            <TextView
                                android:id="@+id/nameOfPlace"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:textSize="12sp"
                                android:layout_marginStart="8dp"
                                android:textColor="#1277d1"
                                android:lineSpacingExtra="4sp"
                                android:text="El-Shouroq (Nasr City)"
                                />

                        </LinearLayout>




                    </LinearLayout>

                </LinearLayout>




            </com.google.android.material.card.MaterialCardView>




            <com.google.android.material.button.MaterialButton
                android:layout_width="wrap_content"
                app:cornerRadius="10dp"
                android:backgroundTint="@color/colorPrimary"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="Add New Client (for test)"
                android:textSize="9sp"
                android:onClick="@{()->viewmodel.addNewClient()}"
android:includeFontPadding="false"
                android:layout_gravity="center"
                android:gravity="center"
                android:insetBottom="0dp"
                android:insetTop="0dp"
                style="@style/Widget.AppCompat.Button.Colored"
                android:textColor="@color/colorWhite"
                android:layout_height="40dp" />




            <LinearLayout
                android:id="@+id/linAddNewClient"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:visibility="@{viewmodel.isNoClients ?View.VISIBLE:View.GONE , default=gone}"

                android:layout_height="wrap_content">





                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/imageAttach"
                    android:layout_gravity="center"
                    app:civ_border_color="@color/grey"
                    android:src="@drawable/ic_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp" />



                <com.google.android.material.button.MaterialButton
                    android:id="@+id/upload_profile"
                    style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:theme="@style/Theme.MaterialComponents"
                    android:insetBottom="0dp"
                    android:insetTop="0dp"
                    android:layout_marginTop="12dp"
                    android:layout_gravity="center"
                    app:cornerRadius="5dp"
                    android:textSize="10sp"
                    android:text="@string/upload_profile"
                    android:background="@android:color/transparent"
                    app:strokeColor="@color/colorPrimary"
                    app:strokeWidth="1dp" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui_b"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#1277d1"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/first_name"
                        />

                        <EditText
                            android:id="@+id/first_name"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textDirection="ltr"
                            android:layout_marginTop="10dp"
                            android:hint="@string/first_name"
                            android:inputType="text"
                            android:textSize="10dp"

                            android:layout_width="match_parent"
                            android:background="@drawable/shape_rounded_gray_stroke"
                            android:layout_height="30dp" />



                    </LinearLayout>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />
                    
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui_b"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#1277d1"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/last_name"
                        />

                        <EditText
                            android:id="@+id/last_name"
                            android:paddingEnd="10dp"
                            android:paddingStart="10dp"
                            android:textDirection="ltr"
                            android:layout_marginTop="10dp"
                            android:hint="@string/last_name"
                            android:inputType="text"
                            android:textSize="10dp"

                            android:layout_width="match_parent"
                            android:background="@drawable/shape_rounded_gray_stroke"
                            android:layout_height="30dp" />



                    </LinearLayout>

                    



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/segoeui_b"
                        android:textStyle="bold"
                        android:textSize="12sp"
                        android:textColor="#1277d1"
                        android:lineSpacingExtra="4sp"
                        android:text="@string/mobile"
                        />

                        <LinearLayout
                            android:id="@+id/linChoose_Country"
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_gravity="start|center"
                            android:gravity="center"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/shape_rounded_gray_small_stroke"
                            android:textSize="10dp"
                            android:layout_height="30dp">

                            <ImageView
                                android:id="@+id/countryLogo"
                                android:src="@drawable/ic_egypt"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content" />
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:textSize="10sp"
                                android:layout_marginStart="10dp"
                                android:textColor="#1277d1"
                                android:lineSpacingExtra="4sp"
                                android:text="EG"
                                />


                            <ImageView
                                android:layout_width="14sp"
                                android:rotation="90"
                                android:layout_marginStart="10dp"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_right_24dp"
                                android:layout_height="14sp" />
                        </LinearLayout>


                    </LinearLayout>


                    <EditText
                        android:id="@+id/editPhone"
                        android:paddingEnd="10dp"
                        android:paddingStart="10dp"
                        android:textDirection="ltr"
                        android:layout_marginTop="10dp"
                        android:hint="100-300-500-2365"
                        android:inputType="text"
android:layout_marginStart="20dp"
                        android:textSize="10dp"
                        android:layout_weight="1"
                        android:layout_width="wrap_content"
                        android:background="@drawable/shape_rounded_gray_stroke"
                        android:layout_height="30dp" />








                </LinearLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="normal"
                    android:fontFamily="@font/segoeui_b"
                    android:textSize="12sp"
                    android:layout_marginTop="10dp"
                    android:textColor="#1277d1"
                    android:lineSpacingExtra="4sp"
                    android:text="@string/email" />

                <EditText
                    android:id="@+id/editEmail"
                    android:paddingEnd="10dp"
                    android:paddingStart="10dp"
                    android:textDirection="ltr"
                    android:layout_marginTop="6dp"
                    android:inputType="textEmailAddress"
                    android:layout_width="match_parent"
                    android:textSize="10dp"

                    android:background="@drawable/shape_rounded_gray_stroke"
                    android:layout_height="30dp" />



                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_marginTop="12dp"
                    android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui_b"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#1277d1"
                            android:lineSpacingExtra="4sp"
                            android:text="@string/date_of_birth"
                            />

                        <LinearLayout
                            android:id="@+id/lin_date_of_birth"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_gravity="start|center"
                            android:gravity="start|center"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/shape_rounded_gray_small_stroke"
                            android:textSize="10dp"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:textSize="10sp"
                                android:textColor="#8d8b8b"
                                android:lineSpacingExtra="4sp"
                                android:text="000-000-000"
                                />


                        </LinearLayout>


                    </LinearLayout>

                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="wrap_content" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">


                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/segoeui_b"
                            android:textStyle="bold"
                            android:textSize="12sp"
                            android:textColor="#1277d1"
                            android:lineSpacingExtra="4sp"
                            android:text="@string/last_name"
                            />
                        <LinearLayout
                            android:id="@+id/lin_Gender"
                            android:layout_width="match_parent"
                            android:orientation="horizontal"
                            android:paddingEnd="12dp"
                            android:paddingStart="12dp"
                            android:paddingBottom="5dp"
                            android:paddingTop="5dp"
                            android:layout_gravity="start|center"
                            android:gravity="start|center"
                            android:layout_weight="1"
                            android:layout_marginTop="8dp"
                            android:background="@drawable/shape_rounded_gray_small_stroke"
                            android:textSize="10dp"
                            android:layout_height="30dp">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textStyle="normal"
                                android:textSize="10sp"
                                android:textColor="#8d8b8b"
                                android:layout_weight="1"
                                android:lineSpacingExtra="4sp"
                                android:text="@string/gender"
                                />


                            <ImageView
                                android:layout_width="14sp"
                                android:rotation="90"
                                android:layout_marginStart="10dp"
                                android:tint="@color/colorPrimary"
                                android:src="@drawable/ic_arrow_right_24dp"
                                android:layout_height="14sp" />
                    </LinearLayout>


                    </LinearLayout>





                </LinearLayout>






            </LinearLayout>



        </LinearLayout>


        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            app:cardBackgroundColor="@color/white"
            app:cardCornerRadius="10dp"
            android:layout_marginTop="16dp"
            app:cardElevation="6dp"
            android:layout_marginEnd="10dp"
            android:layout_marginStart="10dp"
            android:layout_height="wrap_content">



        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_gravity="center"
            android:gravity="start|center"
            android:padding="10dp"
            android:layout_margin="10dp"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/segoeui_b"
